{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es2017",
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
